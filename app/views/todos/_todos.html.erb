<div class="container"> 
<div class="row"> 
    <div class="span4"> 

<title>Todo App </title>
<h1>Todo App</h1>
<p>All your todos here</p>
 

<%= form_tag("/todos/complete/", :method => "post") do %>
  <ul style="list-style-type:none;">
    <% @todos.each do |t| %>
        <% if t.completed == true %>
          <li style="color:grey;"> <%= check_box_tag  "todos_checkbox[]",t.id %>  <strike><%= t.todo_item %></strike>
        <% else %>
          <li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo_item %>
        <% end %>
          </li>
          
    <%end%>

  </ul>
  <%= submit_tag("Complete Todos", :class=>"btn btn-success") %>
<%end %>

</div> <!-- well -->
    </div> <!-- span4 -->
  </div> <!-- row -->
</div> <!-- container -->